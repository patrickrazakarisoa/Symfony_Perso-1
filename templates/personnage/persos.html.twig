{% extends 'base.html.twig' %}

{% block title %}Personnage!{% endblock %}

{% block monTitre %}Liste des personnages{% endblock %}
{% block body %}
{# <div><img src="{{ asset("images/personnages/Marc.png")}} " alt=""></div>
<div>Pseudo : {{ pseudo }} </div>
<div>Age : {{ age }} </div>
<div>Force : {{ carac.force }} </div>
<div>Agilité : {{ carac.agi }} </div>
<div>Intélligence : {{ carac.intel }} </div> #}

<table class="table">
     <tr class="thead-dark">
          <th>Image</th>
          <th>Name</th>
          <th>Age</th>
          <th>Sexe</th>
          <th>Force</th>
          <th>Agilité</th>
          <th>Intelligence</th>
     </tr>
     {% for player in players %}
          <tr>
               <td><img src="{{asset('images/personnages/' ~ player.nom ~'.png')}} " alt=""></td>
               <td><a href="{{ path('afficher_personnage', {'nom':player.nom |lower } ) }}">{{ player.nom }}</a></td>
               <td>{{ player.age}} </td>
               <td> {% if player.sexe %}
                         Homme
                    {% else %}
                         Femme
                    {% endif %}
               <td>{{ player.carac.force}} </td>
               <td>{{ player.carac.agi}} </td>
               <td>{{ player.carac.intel}} </td>  
          </tr>   
     {% endfor %}
</table>


{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Arme!{% endblock %}
{% block monTitre %}Arme : {{ arme.nom }} {% endblock %}
{% block body %}
<div class="row">
     <div class="col-2">
          <img src="{{ asset('images/armes/' ~ arme.nom |replace({'é':'e'}) ~ '.png')}} " alt="">
     </div>
     <div class="col">
          <h2>{{arme.nom }} </h2>
          <p>{{arme.description}} </p>
          <p>Dégat : {{ arme.degat}} </p>
     </div>
</div>
{% endblock %}

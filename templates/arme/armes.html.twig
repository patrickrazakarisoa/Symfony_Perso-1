{% extends 'base.html.twig' %}

{% block title %}Arme!{% endblock %}

{% block monTitre %}Liste des armes{% endblock %}
{% block body %}
<table class="table">
     <tr class="thead-dark">
          <th>Image</th>
          <th>Name</th>
     </tr>
     {% for arme in armes %}
     <tr>
          <td><img src="{{asset('images/armes/' ~ arme.nom |replace({'é':'e'}) ~'.png')}} " alt=""></td>
          <td><a href="{{ path('afficher_arme', {'nom':arme.nom |replace({'é':'e'}) } ) }}">{{ arme.nom }}</a></td>
     </tr>   
     {% endfor %}
</table>
{% endblock %}
